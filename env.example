# База данных
DATABASE_URL=postgresql://habrdigest:your_password@localhost:5432/habrdigest
ASYNC_DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/habrdigest

# Redis
REDIS_URL=redis://localhost:6379/0

# Telegram бот
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Yandex GPT
YANDEX_API_KEY=your_yandex_api_key
YANDEX_FOLDER_ID=your_folder_id
YANDEX_MODEL=yandexgpt-lite  # yandexgpt-lite или yandexgpt

# Настройки парсинга
HABR_BASE_URL=https://habr.com
PARSING_INTERVAL_HOURS=6
MAX_ARTICLES_PER_PARSING=50

# Настройки приложения
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your_secret_key_here

# Настройки Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2 